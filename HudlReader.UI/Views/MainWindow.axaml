<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HudlReader.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignWidth="600" 
        d:DesignHeight="285"
        Width="600"
        Height="285"
        x:Class="HudlReader.UI.Views.MainWindow"
        WindowStartupLocation="CenterScreen"
        x:DataType="vm:MainWindowViewModel"
        Title="HudlReader.Cli.UI">
    
    <StackPanel Margin="20" Spacing="15">
        
        <!-- Input Folder -->
        <StackPanel>
            <TextBlock Text="Input Folder:" Margin="0,0,0,5"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" 
                         Text="{Binding InputFolder, Mode=TwoWay}" 
                         IsReadOnly="True"
                         Watermark="Select output folder..."/>
                <Button Grid.Column="1" 
                        Name="InputFolderButton"
                        Content="Browse..." 
                        Command="{Binding BrowseInputFolderCommand}"
                        Margin="5,0,0,0"
                        Width="100"/>
            </Grid>
        </StackPanel>

        <!-- Output Folder -->
        <StackPanel>
            <TextBlock Text="Output Folder:" Margin="0,0,0,5"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" 
                         Text="{Binding OutputFolder, Mode=TwoWay}" 
                         IsReadOnly="True"
                         Watermark="Select output folder..."/>
                <Button Grid.Column="1" 
                        Name="OutputFolderButton"
                        Content="Browse..." 
                        Command="{Binding BrowseOutputFolderCommand}"
                        Margin="5,0,0,0"
                        Width="100"/>
            </Grid>
        </StackPanel>

        <!-- Progress Bar -->
        <StackPanel>
            <TextBlock Text="Progress:" Margin="0,0,0,5"/>
            <ProgressBar Minimum="0" 
                         Value="{Binding Progress, Mode=TwoWay}"
                         Maximum="100"
                         Height="25"/>
        </StackPanel>

        <!-- Start Button -->
        <Button Content="Start Processing" 
                Command="{Binding StartProcessingCommand}"
                HorizontalAlignment="Center"
                Width="150"
                Height="35"
                Margin="0,10,0,0"/>
        
    </StackPanel>

</Window>
